<%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
  <div class="input_form">
    <%= f.text_field :content, class: 'form_area', placeholder: 'なにか書きたまえ' %>
    <label class="form_image">
      <span class="image_file">がぞ</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'submit_btn' %>
<% end %>




